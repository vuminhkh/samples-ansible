systemLog:
  destination: file
  path: "/var/log/mongodb/mongod.log"
  logAppend: true
net:
  bindIp: "{{ mongodb_interfaces }}"
  port: {{ mongodb_db_port }}
storage:
  dbPath: "{{mongodb_db_path}}"
{% if mongodb_storage_engine | default(false) %}
  engine: "{{ mongodb_storage_engine }}"
{% endif %}

{% if mongodb_replication_set -%}
replication:
  replSetName: "{{mongodb_replication_set}}"
{%- endif %}
